{
  "functions": {
    "source": "functions",
    "predeploy": [
      "cd \"$RESOURCE_DIR\" && npm --prefer-offline --no-audit --progress=false install"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
} 